  <div class="w-full min-h-screen flex justify-center bg-zinc-800 px-8 py-5 text-white">
    <div class="h-[71vh] w-[70vw] bg-zinc-700 rounded-3xl py-6 px-4">
      <h1 class="text-2xl text-center">Create a new post</h1>
      <hr class="mt-3 w-1/9 opacity-30"></hr>
      
      <form action="/createpost" method="post" class="flex flex-col items-center" enctype="multipart/form-data">
        <input class="block w-1/2 px-4 py-4" type="file" name="postimage">
        <input class="block w-1/2 px-4 py-4 border-2 rounded-xl mt-4 text-black" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/2 px-4 py-2 border-2 rounded-xl mt-4 text-black h-32" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/2 px-4 py-4 rounded-xl bg-red-700 mt-4" type="submit" value="Create Post">
      </form>
      
    </div>
  </div>

