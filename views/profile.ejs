<% include partials/header.ejs %>

<div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">

  <form hidden id="upload-form" action="/upload" method="post" enctype="multipart/form-data">
    <input type="file" name="image">
  </form>

  <div class="profile-section flex flex-col items-center mt-4">
    <div class="relative">
      <span id="upload-icon" class="w-8 h-8 absolute bottom-1.5 right-0 rounded-full flex items-center justify-center bg-zinc-300">
        <i class="ri-pencil-fill text-zinc-800"></i>
      </span>
      <div class="profile-picture w-32 h-32 bg-white rounded-full overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profileImage %>" alt="display_picture">
      </div>
    </div>
    <h1 class="full-name mt-5 font-semibold text-2xl"><%= user.name %></h1>
    <h3 class="user-name mt-0.5 text-md">@<%= user.username %></h3>
    <!-- <p>I am the CEO of Pied Piper</p> -->
    <a href="/edit" class="mt-5 px-6 py-2 bg-zinc-600 text-md font-semibold rounded-full">Edit</a>
    <a href="/add" class="px-4 py-2 rounded-lg bg-teal-700 text-xs font-semibold mt-5">Add New Pin</a>
  </div>

  <div class="cards px-10 mt-8 flex flex-wrap gap-10">
    <div class="card">
      <div class="w-48 h-36 rounded-lg bg-zinc-200 overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/uploads/<%= user?.posts[0]?.image %>" alt="picture">
      </div>
      <a href="/show/posts" class="inline-block mt-2 text-lg font-semibold">Your Uploaded Pins</a>
      <h5 class="text-sm font-medium text-zinc-300"><%= user.posts.length %> pins</h5>
    </div>
  </div>
</div>

<script>
  // Upload profile picture
  document.querySelector('#upload-icon').addEventListener('click', () => {
    document.querySelector("#upload-form input").click();
  });

  //  Submit the form when a file is selected
  document.querySelector("#upload-form input").addEventListener('change', () => {
    document.querySelector("#upload-form").submit();
  });
</script>

